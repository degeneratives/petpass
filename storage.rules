rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload images for their pets
    match /pets/{petId}/{allPaths=**} {
      // Allow authenticated users to read any pet images (for QR sharing)
      allow read: if true;

      // Allow authenticated users to write to their own pet directories
      allow write: if request.auth != null;
    }
  }
}
